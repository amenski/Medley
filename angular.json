{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "notable": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "md",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "src/render/index.html",
            "main": "src/render/main.ts",
            "polyfills": "src/render/polyfills.ts",
            "tsConfig": "src/render/tsconfig.app.json",
            "assets": [
              "src/render/favicon.ico",
              "src/render/assets",
              { "glob": "**/*", "input": "node_modules/monaco-editor/dev/vs", "output": "assets/vs/" }
            ],
            "styles": [
              "src/render/styles.scss",
              "node_modules/highlight.js/styles/tomorrow.css"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/render/styles/"
              ]
            },
            "scripts": [
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/render/environments/environment.ts",
                  "with": "src/render/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "notable:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "notable:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "notable:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/render/test.ts",
            "polyfills": "src/render/polyfills.ts",
            "tsConfig": "src/render/tsconfig.spec.json",
            "karmaConfig": "src/render/karma.conf.js",
            "styles": [
              "src/render/styles.scss",
              "node_modules/highlight.js/styles/tomorrow.css"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/render/styles/"
              ]
            },
            "scripts": [
            ],
            "assets": [
              "src/render/favicon.ico",
              "src/render/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/render/tsconfig.app.json",
              "src/render/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "notable-e2e": {
      "root": "e2e/",
      "projectType": "application",
      "prefix": "",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "notable:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "notable:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": "e2e/tsconfig.e2e.json",
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "markdown-editor"
}
